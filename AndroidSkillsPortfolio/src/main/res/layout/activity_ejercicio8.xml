<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="24dp"
    tools:context=".Ejercicio8Activity">

    <TextView
        android:id="@+id/tvDescripcion8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ejercicio 8: Ingresa el precio base y selecciona los servicios adicionales. Pulsa Calcular para ver el precio total. Puedes volver al menú con el botón de abajo."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/txtPrecioBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio base"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:backgroundTint="#81C784"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- ToggleButton Instalacion y su precio -->
    <ToggleButton
        android:id="@+id/tbtnInstalacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textOn="Instalación"
        android:textOff="Instalación"
        android:checked="true"
        android:backgroundTint="#AED581"
        app:layout_constraintTop_toBottomOf="@id/txtPrecioBase"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/lblPrecioInstalacion"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/lblPrecioInstalacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:textSize="16sp"
        android:textColor="#388E3C"
        app:layout_constraintTop_toTopOf="@id/tbtnInstalacion"
        app:layout_constraintBottom_toBottomOf="@id/tbtnInstalacion"
        app:layout_constraintStart_toEndOf="@id/tbtnInstalacion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- ToggleButton Formacion y su precio -->
    <ToggleButton
        android:id="@+id/tbtnFormacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textOn="Formación"
        android:textOff="Formación"
        android:backgroundTint="#81C784"
        app:layout_constraintTop_toBottomOf="@id/tbtnInstalacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lblPrecioFormacion"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblPrecioFormacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textSize="16sp"
        android:textColor="#388E3C"
        app:layout_constraintTop_toTopOf="@id/tbtnFormacion"
        app:layout_constraintBottom_toBottomOf="@id/tbtnFormacion"
        app:layout_constraintStart_toEndOf="@id/tbtnFormacion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- ToggleButton Alimentacion BD y su precio -->
    <ToggleButton
        android:id="@+id/tbtnAlimentacionBD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textOn="Alimentación BD"
        android:textOff="Alimentación BD"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tbtnFormacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lblPrecioAlimentacionBD"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblPrecioAlimentacionBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textSize="16sp"
        android:textColor="#388E3C"
        app:layout_constraintTop_toTopOf="@id/tbtnAlimentacionBD"
        app:layout_constraintBottom_toBottomOf="@id/tbtnAlimentacionBD"
        app:layout_constraintStart_toEndOf="@id/tbtnAlimentacionBD"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textColor="#FFF"
        android:backgroundTint="#388E3C"
        app:layout_constraintTop_toBottomOf="@id/lblPrecioAlimentacionBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:background="@android:color/transparent"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menú"
        android:textColor="#FFF"
        android:backgroundTint="#607D8B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>