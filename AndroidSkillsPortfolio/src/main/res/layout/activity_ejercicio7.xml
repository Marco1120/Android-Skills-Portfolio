<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="24dp"
    tools:context=".Ejercicio7Activity">

    <TextView
        android:id="@+id/tvDescripcion7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ejercicio 7: Ingresa dos números y pulsa Calcular para ver la suma, resta, multiplicación y división. Si el divisor es cero, se mostrará un error en rojo."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#D84315"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/txtNumero1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Primer número"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:backgroundTint="#FFB300"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/txtNumero2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Segundo número"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:backgroundTint="#FFB300"
        app:layout_constraintTop_toBottomOf="@id/txtNumero1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textColor="#FFF"
        android:backgroundTint="#D84315"
        app:layout_constraintTop_toBottomOf="@id/txtNumero2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/lblSuma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Suma: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        app:layout_constraintTop_toBottomOf="@id/btnCalcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/lblResta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resta: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/lblSuma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/lblMultiplicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multiplicación: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FBC02D"
        app:layout_constraintTop_toBottomOf="@id/lblResta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/lblDivision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="División: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6A1B9A"
        app:layout_constraintTop_toBottomOf="@id/lblMultiplicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menú"
        android:textColor="#FFF"
        android:backgroundTint="#607D8B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>